<body> 
  <main>
    <div class="signup-container">
      <div class="sign-up">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="login-input">
            <h2>新規会員登録</h2>
            <p>ユーザー名
              <% if @user.errors.include?(:name) %>
                <p class="login__form-error"><%= @user.errors.full_messages_for(:name).first %>
              <% end %>
            </p>
            <%= f.text_field :name, class: "userid", autocomplete: "name" %>
            <p>メールアドレス
              <% if @user.errors.include?(:email) %>
                <p class="login__form-error"><%= @user.errors.full_messages_for(:email).first %>
              <% end %>
            </p>
            <%= f.email_field :email, class: "userid", autocomplete: "email" %>
            
            <% if @minimum_password_length %>
              <small class="minimum_password_length"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
            <% end %>
            <p>パスワード
              <% if @user.errors.include?(:password) %>
                <p class="login__form-error"><%= @user.errors.full_messages_for(:password).first %>
              <% end %>
            </p>
            <%= f.password_field :password, class: "password", autocomplete: "new-password", minlength: @minimum_password_length, maxlength: '20' %>
            <p>パスワードの確認
              <% if @user.errors.include?(:password_confirmation) %>
                <p class="login__form-error"><%= @user.errors.full_messages_for(:password_confirmation).first %>
              <% end %>
            </p>
            <%= f.password_field :password_confirmation, class: "password", autocomplete: "new-password", minlength: @minimum_password_length, maxlength: '20' %>
            <%= f.submit "新規会員登録", class: "long-btn login-submit" %>
          </div>
            <div class="login-input-option">
            <h3 class="or-separater">or</h3>
            <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: "sns-long-btn login-apple" do %>
                <i class="fab fa-google"></i>
                Googleアカウントで登録
            <% end %>
            <%= link_to user_facebook_omniauth_authorize_path, method: :post, class: "sns-long-btn login-facebook" do %>
                <i class="fab fa-facebook-f"></i>
                Facebookアカウントで登録
            <% end %>

            <%= link_to user_twitter_omniauth_authorize_path, method: :post, class: "sns-long-btn login-twitter" do %>
                <i class="fab fa-twitter"></i>
                  Twitterアカウントで登録
            <% end %>
            <p class="readme">＊利用者の許可なく外部サービスに使用されることはありません</p>
        </div>
        <div class="signup-link">
            <%= link_to("すでにアカウントをお持ちの方はこちら","/login") %>    
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </main>
</body>