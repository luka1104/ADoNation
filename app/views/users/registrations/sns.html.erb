<body> 
  <main>
    <div class="signup-container">
      <div class="sign-up">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="login-input">
            <h2>基本情報入力</h2>
            <p>ユーザー名
              <% if @user.errors.include?(:name) %>
                <p class="login__form-error"><%= @user.errors.full_messages_for(:name).first %>
              <% end %>
            </p>
            <%= f.text_field :name, class: "userid", autocomplete: "name" %>
            <p>メールアドレス
              <% if @user.errors.include?(:email) %>
                <p class="login__form-error"><%= @user.errors.full_messages_for(:email).first %>
              <% end %>
            </p>
            <%= f.email_field :email, class: "userid", autocomplete: "email" %>
            <%= f.hidden_field :password, class: "password", autocomplete: "new-password", minlength: @minimum_password_length, maxlength: '20' %>
            <%= f.hidden_field :password_confirmation, class: "password", autocomplete: "new-password", minlength: @minimum_password_length, maxlength: '20' %>
            <%= f.submit "新規会員登録", class: "long-btn login-submit" %>
          </div>
        <% end %>

      </div>
    </div>
  </main>
</body>